{
  "name": "QBar",
  "image": "mcr.microsoft.com/devcontainers/java:21",

  "runArgs": [
    "--cpus=2",
    "--memory=4g",
    "--memory-swap=4g"
  ],

  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "moby": false
    }
  },

  "postCreateCommand": "java -version && mvn -version"
}